# --- Database ---
POSTGRES_USER=sdd
POSTGRES_PASSWORD=sdd_password
POSTGRES_DB=sdd

# --- Providers ---
# Claude Code / Anthropic
ANTHROPIC_API_KEY=sk-ant-REPLACE_ME

# OpenAI (para OpenCode si lo usas)
OPENAI_API_KEY=sk-REPLACE_ME

# Gemini CLI
GEMINI_API_KEY=REPLACE_ME
# Obtén tu API key en: https://makersuite.google.com/app/apikey

# Google Cloud (opcional, solo si usas servicios de GCP)
GOOGLE_CLOUD_PROJECT_ID=

# --- HITL Configuration ---
HITL_ENABLED=true
HITL_PROVIDER=humanlayer
HITL_WEBHOOK_URL=
HITL_SLACK_WEBHOOK=
HITL_EMAIL_NOTIFICATIONS=false

# --- Auditoría Configuration ---
AUDIT_LOG_LEVEL=INFO
AUDIT_DB_ENABLED=true
AUDIT_FILE_ENABLED=true
AUDIT_LOG_PATH=/workspace/.local/audit

# --- Development ---
CI=false
DEBUG=false
LOG_LEVEL=INFO

# --- Agent Configuration ---
AGENT_MAX_ITERATIONS=10
AGENT_TIMEOUT=300
AGENT_TEMPERATURE=0.7

# --- Context Configuration ---
CONTEXT_CHUNK_SIZE=1000
CONTEXT_CHUNK_OVERLAP=200
CONTEXT_MAX_TOKENS=8000
EMBEDDING_MODEL=text-embedding-3-small

# --- Session Configuration ---
SESSION_ID=
PROJECT_TYPE=greenfield
REPO_URL=
CONTEXT_FILE=

# --- Ollama Configuration ---
OLLAMA_URL=http://ollama:11434
OLLAMA_MODEL=llama3.2:latest
OLLAMA_ENABLED=true
# Modelos recomendados:
# - llama3.2:latest (8B, rápido, general)
# - codellama:latest (7B, especializado en código)
# - mistral:latest (7B, bueno en razonamiento)
# - qwen2.5-coder:latest (7B, excelente para código)
# - deepseek-coder:latest (6.7B, muy bueno para código)
